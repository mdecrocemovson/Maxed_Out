<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "user-info"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "user-info" %> <br/>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "user-info" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :height, "Height (in inches)", class: "user-info" %><br />
    <%= f.text_field :height %>
  </div>

  <div class="field">
    <%= f.label :weight, "Weight (in lbs)", class: "user-info" %><br />
    <%= f.text_field :weight %>
  </div>

  <div class="field">
    <%= f.label :max_bench_press, "Max Bench Press (What you can lift for 1 rep)", class: "user-info" %><br />
    <%= f.text_field :max_bench_press %>
  </div>

  <div class="field">
    <%= f.label :max_squat, "Max Squat (What you can lift for 1 rep)", class: "user-info" %><br />
    <%= f.text_field :max_squat%>
  </div>

  <div class="field">
    <%= f.label :max_dead_lift, "Max Deadlift (What you can lift for 1 rep)", class: "user-info" %><br />
    <%= f.text_field :max_dead_lift %>
  </div>

  <div class="field">
    <%= f.label :accountability, "Do you want to be held accountable for missing workouts?", class: "user-info"%>
    <%= f.check_box :accountability_switch %>
  </div>

  <div class="field">
    <%= f.label :workouts_per_Week, "How many workouts are you signing up for per week?", class: "user-info"%>
    <%= f.text_field :workouts_per_week %>
  </div>

  <div class="field">
    <%= f.label :accountability_buddy_email, "What is your accountability buddy's email?", class: "user-info"%>
    <%= f.text_field :accountability_buddy_email %>
  </div>
  <div class="field">
    <%=f.label :dollar_amount, "How much would you like to stake on completing those workouts/week?", class: "user-info"%>
    <%=f.text_field :dollar_amount %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
