<h2 class="user-info sign-up-logo">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "sign-up-label"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "sign-up-label" %> <br/>
    <%= f.password_field :password, autocomplete: "new-password", class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "sign-up-label" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :height, "Height (in inches)", class: "sign-up-label" %><br />
    <%= f.text_field :height, class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :weight, "Weight (in lbs)", class: "sign-up-label" %><br />
    <%= f.text_field :weight, class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :max_bench_press, "Max Bench Press (What you can lift for 1 rep)", class: "sign-up-label" %><br />
    <%= f.text_field :max_bench_press, class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :max_squat, "Max Squat (What you can lift for 1 rep)", class: "sign-up-label" %><br />
    <%= f.text_field :max_squat, class: "sign-up-field"%>
  </div>

  <div class="field">
    <%= f.label :max_dead_lift, "Max Deadlift (What you can lift for 1 rep)", class: "sign-up-label" %><br />
    <%= f.text_field :max_dead_lift, class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :accountability, "Do you want to be held accountable for missing workouts?", class: "sign-up-label"%>
    <%= f.check_box :accountability_switch, class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :workouts_per_Week, "How many workouts are you signing up for per week?", class: "sign-up-label"%>
    <%= f.text_field :workouts_per_week, class: "sign-up-field" %>
  </div>

  <div class="field">
    <%= f.label :accountability_buddy_email, "What is your accountability buddy's email?", class: "sign-up-label"%>
    <%= f.text_field :accountability_buddy_email, class: "sign-up-field" %>
  </div>
  <div class="field">
    <%=f.label :dollar_amount, "How much would you like to stake on completing those workouts/week?", class: "sign-up-label"%>
    <%=f.text_field :dollar_amount, class: "sign-up-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "signup-button sign-up-label" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
